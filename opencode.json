{
  "$schema": "https://opencode.ai/config.json",

  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "anthropic/claude-haiku-4-5",

  "instructions": [
    "AGENTS.md",
    "goal.md"
  ],

  "tools": {
    "bash": true,
    "read": true,
    "write": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "list": true,
    "webfetch": false,
    "websearch": false,
    "todoread": true,
    "todowrite": true
  },

  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "edit": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    },
    "bash": {
      "*": "allow",
      "rm -rf *": "deny",
      "git push --force *": "deny",
      "git push * --force *": "deny",
      "git reset --hard *": "deny"
    }
  },

  "agent": {
    "manager": {
      "description": "Project manager: reads goals, reviews issues, creates work items, updates memory.",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "temperature": 0.1,
      "steps": 30
    },
    "swe": {
      "description": "Software engineer: picks issues, implements solutions, reports progress.",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "temperature": 0.0,
      "steps": 50
    }
  },

  "command": {
    "manager-run": {
      "description": "Run the manager agent to review and create issues",
      "agent": "manager"
    },
    "swe-run": {
      "description": "Run the SWE agent to pick and implement an issue",
      "agent": "swe"
    }
  },

  "watcher": {
    "ignore": [
      ".opencode/logs/**",
      "node_modules/**",
      ".git/**"
    ]
  }
}
